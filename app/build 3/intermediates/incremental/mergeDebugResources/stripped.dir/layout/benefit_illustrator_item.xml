<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lyParent"
   android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/lightblue_border"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/tbParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">


        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPolicyYear"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text=""
               ></TextView>

            <TextView
                android:id="@+id/txtAge"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="">

            </TextView>

            <TextView
                android:id="@+id/txtLifeCover"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="">

            </TextView>



            <TextView
                android:id="@+id/txtAnnualPrem"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="">

            </TextView>
            <TextView
                android:id="@+id/txtCashFlow"
                android:visibility="gone"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="">

            </TextView>

            <TextView
                android:id="@+id/txtLoanAvailable"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="">

            </TextView>



        </TableRow>

    </TableLayout>


</LinearLayout>
