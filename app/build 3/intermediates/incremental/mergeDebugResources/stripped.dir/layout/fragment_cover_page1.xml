<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ul_p1_body"
    tools:context=".ultralaksha.ultralakshya.fragment.quote.content.coverPage1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imghdr"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ul_p1_header" />

    <TextView
        android:id="@+id/txtMessage"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      style="@style/TextViewStyle.VerySmall"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_below="@+id/imghdr"
      android:gravity="center"
        android:text="An exclusive financial cum protection solution specially crafted for"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/TextViewStyle.Large"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/txtMessage"

        android:gravity="center"
        android:text=""
        ></TextView>
</RelativeLayout>
