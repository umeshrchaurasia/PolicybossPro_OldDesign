<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg_dashboard"
    android:orientation="vertical"
    tools:context="com.policyboss.policybosspro.ultralaksha.ultralakshya.fragment.quote.content.UltraLakshayScenarioOfBenefitsDeath">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lyHdr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">


                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:text="@string/UltraLakshyaScenario"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Basic Sum Assured: "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtBasicSumAssured"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Rs.10,00,000"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lyHdr"

                android:paddingLeft="4dp"
                android:paddingRight="4dp">


                <!--  central line-->
                <TextView
                    android:id="@+id/textYear"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/cell_yellow_shape"
                    android:padding="8dp"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/view"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/txtYear4"
                    android:layout_below="@+id/textYear"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="-15dp"
                    android:background="@color/dashboard_header">

                </View>

                <TextView
                    android:id="@+id/txtYear1"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/textYear"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yellow_circle"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/viewDeath"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="45dp"
                    android:layout_below="@+id/lyJeevanLakshya"
                    android:background="@color/yellow">

                </View>



                <TextView
                    android:id="@+id/txtDeathCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lyJeevanLakshya"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBaseline="@+id/viewDeath"
                    android:background="@drawable/rect_red_shape"
                    android:gravity="center"
                    android:text="Year 5\nDeath Course"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textBenefitDeath"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDeathCourse"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect_dark_green_shape"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Benefits paid to the nominee"
                    android:textColor="@color/white"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtYear2"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/txtUltraEveryMonth"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/yellow_circle"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txtYear4"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/lyEveryMonthPeriod"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/yellow_circle"
                    android:gravity="center"
                    android:text="25"
                    android:textColor="@color/black" />
                <!--end Central Line-->


                <!--Right step1-->
                <LinearLayout
                    android:id="@+id/lyJeevanLakshya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/textYear"
                    android:orientation="vertical">

                    <TextView

                        style="@style/TextViewStyle.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_blue_one"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="ULTRA LAKSHYA"
                        android:textColor="@color/white"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewStyle.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Year 1: "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtUltrafirstPremium"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewStyle.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Year 2: "

                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtUltraRenewalPremium"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtOtherYrs2"
                        style="@style/TextViewStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/header_dark_text" />

                </LinearLayout>

                <!--Left step1-->
                <LinearLayout
                    android:id="@+id/lyLicjeevanLakshya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/textYear"
                    android:orientation="vertical">

                    <TextView

                        style="@style/TextViewStyle.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@color/dark_blue_one"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="LIC JEEVAN LAKSHYA"
                        android:textColor="@color/white"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewStyle.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Year 1: "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtLicfirstPremium"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyJeevanPrem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewStyle.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Year 2: "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txtLicRenewalPremium"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtOtherYrs1"
                        style="@style/TextViewStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/header_dark_text" />


                </LinearLayout>

                <!--Right step2  Pemeium Stop-->

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txtDeathCourse"
                    android:layout_above="@+id/viewDeath"
                    android:layout_marginBottom="-44dp"
                    android:gravity="right"
                    android:text="Premium Stops"
                    android:textColor="@color/red_button"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textTotalPaidRight"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/viewDeath"
                    android:text="Total paid till date"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtLicULFifthYearPrem"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textTotalPaidRight"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!--///////// end ///////////-->


                <!--Left step2  Pemeium Stop-->
                <!--android:layout_toLeftOf="@+id/txtDeathCourse"-->

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:id="@+id/txtLicPremText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/viewDeath"
                    android:layout_marginBottom="-44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txtDeathCourse"
                    android:gravity="left"
                    android:text="Premium Stops"
                    android:textColor="@color/red_button"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textTotalPaidLeft"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/viewDeath"
                    android:text="Total paid till date"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtLicJLFifthYearPrem"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textTotalPaidRight"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <!--///////// end ///////////-->


                <!--Right step3 Benefit Layout -->
                <TextView
                    android:id="@+id/txtUltraLumSum"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textBenefitDeath"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txtYear2"
                    android:background="@drawable/rect_dark_brown_shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rs.50000 paid in\n lump sum"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txtUltraEveryYearEndOfTerm"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtUltraLumSum"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtYear2"
                    android:background="@drawable/rect_light_brown_shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rs.10000 every year till\n end Of Term"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/txtUltraEveryMonth"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtUltraEveryYearEndOfTerm"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtYear2"
                    android:background="@drawable/rect_verylight_brown_shape"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Rs.10000 every year till\n end Of Term"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:id="@+id/lyPaidOnMaturity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtUltraEveryMonth"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"

                    android:layout_toRightOf="@+id/txtYear2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgArrowPaidOnMaturity"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ultra_right_arrow" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rect_light_green_shape"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txtUltraPaidOnMaturity"
                            style="@style/TextViewStyle.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:text="Rs.10000 every year till\n end Of Term"
                            android:textColor="@color/black" />

                        <TextView

                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="including guaranteed and non-guaranteed benefits"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyEveryMonthPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/lyPaidOnMaturity"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"

                    android:layout_toRightOf="@+id/view"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgArrowEveryMonthPeriod"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ultra_right_yello_arrow" />

                    <TextView
                        android:id="@+id/txtUltraEveryMonthPeriod"
                        style="@style/TextViewStyle.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_light_yellow_shape"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Rs.10000 every year till\n end Of Term"
                        android:textColor="@color/black" />


                </LinearLayout>


                <!--////////////end //////////-->


                <TextView
                    android:id="@+id/txtLicEveryYear"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textBenefitDeath"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/txtYear2"
                    android:background="@drawable/rect_light_brown_shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Rs.50000 every year till\n end of term"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/lyLicPaidOnMaturity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/txtUltraEveryMonth"

                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/txtYear2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rect_light_green_shape"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txtLicPaidOnMaturity"
                            style="@style/TextViewStyle.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Rs.10000 every year till\n end Of Term"
                            android:textColor="@color/black" />

                        <TextView

                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="including guaranteed and non-guaranteed benefits"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgArrowLicPaidOnMaturity"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ultra_left_arrow" />


                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
