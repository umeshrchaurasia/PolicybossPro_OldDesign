<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_dashboard"
    android:orientation="vertical">
    <!--tools:context=".ultralaksha.ultralakshya.fragment.quote.content.UltraLakshayProductCombo"-->
    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/TextViewStyle.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="5dp"
        android:text="@string/UltraLakshyaProdCombo"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/tbParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"

                        android:text="Product"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="LIC \n Jeevan Lakshya"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="HDFC\nClick2Protect 3D Plus"
                        android:textColor="@color/white"></TextView>




                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/header_dark_text"
                        android:text="Term"></TextView>

                    <TextView
                        android:id="@+id/txtLicTerm"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcTerm"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/header_dark_text"
                        android:text="PPT"></TextView>

                    <TextView
                        android:id="@+id/txtLicPPT"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcPPT"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:text="Mode"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicMode"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcMode"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:text="Sum Assured"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicSum"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcSum"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/lblPremiumYear"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:text="Premium Year 1"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicPremYearOne"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcPremYearOne"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView

                        android:id="@+id/lblPremiumOtherYear"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:text="Premium Year 2"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicPremOtherYears"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcPremOtherYears"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/lblPremiumTotalYear"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:text=""
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtTotalOne"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text=""></TextView>




                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/lblPremiumOtherTotalYear"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView

                        android:id="@+id/txtTotalTwo"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text=""></TextView>




                </TableRow>

            </TableLayout>




            <LinearLayout
                android:id="@+id/llimgBuyNowHDFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"


               android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"

                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgBuyNowHDFC"

                        android:layout_width="140dp"
                        android:layout_height="55dp"
                        android:gravity="center"

                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:background="@drawable/rect_blue_border"
                        android:layout_gravity="center"
                        android:src="@drawable/buyhdfc"
                        android:scaleType="centerInside"></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtBuy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="50"
                    android:layout_gravity="left|center_vertical"
                  >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:background="#f38d1e"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/buy" />

                    <TextView

                        style="@style/TextStyle.TextLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:minHeight="30dp"
                        android:text="BUY"
                        android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
