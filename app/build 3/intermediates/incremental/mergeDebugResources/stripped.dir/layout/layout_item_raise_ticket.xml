<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ticketPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/folder_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TICKET ID"
                        android:textAllCaps="true"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txtTicketId"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="CATEGORY"
                        android:textAllCaps="true"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txtTicketCategory"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txtproduct"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:visibility="visible"
                        android:textColor="@color/black" />
                    <!--<LinearLayout-->
                    <!--android:id="@+id/llviewComment"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->


                    <!--<ImageView-->
                    <!--android:id="@+id/txtview"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->

                    <!--android:src="@drawable/agreemnet" />-->
                    <!--<TextView-->
                    <!--style="@style/TextStyle.TextMedium"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:text="View Comment"-->

                    <!--android:textSize="11sp" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ticket status"
                        android:textAllCaps="true"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txtTicketStatus"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="DESCRIPTION"
                        android:textAllCaps="true"
                        android:textSize="11sp" />

                    <!--<TextView-->
                    <!--android:id="@+id/txtTicketDesc"-->
                    <!--style="@style/TextStyle.TextMedium"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textColor="@color/black" />-->


                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/txtTicketDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:colorClickableText="@color/colorPrimary"
                        app:trimCollapsedText="Show less"
                        app:trimExpandedText="Show more"
                        app:trimLength="35"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        app:trimMode="trimModeLength" />

                    <TextView
                        android:id="@+id/txtCRN"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:visibility="visible"
                        android:textColor="@color/black" />

                    <!--<LinearLayout-->
                    <!--android:id="@+id/llAddComment"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->
                    <!--<ImageView-->
                    <!--android:id="@+id/txtComment"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->

                    <!--android:src="@drawable/file_add" />-->

                    <!--<TextView-->
                    <!--style="@style/TextStyle.TextMedium"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:text="Add "-->

                    <!--android:textSize="11sp" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/seperator"
                android:layout_marginBottom="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llviewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/txtview"
                        android:layout_width="32dp"
                        android:layout_height="32dp"

                        android:src="@drawable/agreemnet" />

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="View Comment"

                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAddComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/txtComment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"

                        android:src="@drawable/file_add" />

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Add "

                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
