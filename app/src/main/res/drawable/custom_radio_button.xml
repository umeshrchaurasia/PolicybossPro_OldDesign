<!-- custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <!-- Add a border for the selected state -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/colorAccent" />
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="12dp" /> <!-- Half of the size to create a circle -->
                </shape>
            </item>
            <item>
                <!-- Add a border for the selected state -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:color="@color/header_text_color" android:width="1dp" />
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="12dp" /> <!-- Half of the size to create a circle -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <!-- Add a border for the unselected state -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#ffffff" /> <!-- Fill color for the circle -->
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="12dp" /> <!-- Half of the size to create a circle -->
                </shape>
            </item>
            <item>
                <!-- Add a border for the unselected state -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:color="@color/header_text_color" android:width="1dp" />
                    <size android:width="24dp" android:height="24dp" />
                    <corners android:radius="12dp" /> <!-- Half of the size to create a circle -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
