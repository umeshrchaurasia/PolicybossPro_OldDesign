<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.policyboss.policybosspro.login.LoginActivity"
    tools:showIn="@layout/activity_login_new">

    <!--<android.support.v7.widget.CardView-->
    <!--style="@style/CardStyle.Home"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--app:cardElevation="0dp">-->

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/pb_splash_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="ONE STOP FINANCIAL SOLUTION"
            android:textAppearance="@style/TextStyle.Title"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_transparent_white_shape"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"

                android:hint="Email/User Id/Mobile No./Erp Code"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/Style.edittext"
                    android:drawableRight="@drawable/vector_email_white"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:text="107896"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:visibility="gone"
                app:hintTextAppearance="@style/TextLabel"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white">

                <EditText
                    android:id="@+id/etPassword"
                    style="@style/Style.edittext"
                    android:drawableRight="@drawable/vector_password"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--displaying a radio group on below line-->

            <TextView
                style="@style/TextViewStyle.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="Login Via: "
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rect_transparent_shape"
                android:clickable="true"

                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8dp"
                    android:layout_marginRight="@dimen/_8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPassword"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="@dimen/_40dp"
                        android:background="@drawable/custom_radio_button"
                        android:button="@null"
                        android:checked="false"
                        android:text=""

                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_8dp"
                        android:gravity="bottom"
                        android:text="Password"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rbOtp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="@dimen/_16dp"
                        android:background="@drawable/custom_radio_button"
                        android:button="@null"
                        android:checked="true"
                        android:text=""

                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_8dp"
                        android:gravity="bottom"
                        android:text="OTP"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </RadioGroup>
            </LinearLayout>


            <Button
                android:id="@+id/btnNext"

                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:minHeight="48dp"
                android:text="Next"
                android:layout_gravity="center"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By continuing, you agree with our "
                android:textColor="@color/bg_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/tc"
                android:textAppearance="@style/TextViewStyle.Large"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttermspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:text=","
                android:textAppearance="@style/TextViewStyle.Large"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/txtprivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/privacy"
                android:textAppearance="@style/TextViewStyle.Large"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSignIn"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/button_color"
            android:minHeight="48dp"
            android:text="SIGN IN"

            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="0.6"
                android:gravity="left"
                android:text="@string/signup"
                android:textAppearance="@style/TextStyle.TextMedium"
                android:textColor="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvForgotPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="0.4"
                android:gravity="right"
                android:text="@string/forgot_password"
                android:textAppearance="@style/TextStyle.TextMedium"
                android:textColor="@color/white" />

        </LinearLayout>

        <!--        android:drawableRight="@drawable/ico_ticket"-->
        <LinearLayout
            android:id="@+id/lyRaiseTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="Raise Ticket"
                android:textAppearance="@style/TextStyle.TextMedium"
                android:textColor="@color/white"
                android:visibility="visible" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ico_ticket"></ImageView>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:drawableBottom="@drawable/google_sign_icon"
            android:gravity="center"
            android:text="Sign in with"
            android:textAppearance="@style/TextStyle.TextMedium"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@null" />


    </LinearLayout>


    <!--</android.support.v7.widget.CardView>-->
</ScrollView>

