<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/lightblue_border"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/tbParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtYear"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"

                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtJeevanPremPaid"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="wdwdw">

            </TextView>


            <TextView
                android:id="@+id/txtJeevanBenefit"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="23"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="wdwdw">

            </TextView>

            <TextView
                android:id="@+id/txtLakhshyaPremPaid"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:text="wdwdw">

            </TextView>

            <TextView
                android:id="@+id/txtLakhshyaBenefit"
                style="@style/TextViewStyle.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="23"
                android:background="@drawable/cell_shape"

                android:gravity="center"
                android:text="wdwdw">

            </TextView>
        </TableRow>


    </TableLayout>


</LinearLayout>
