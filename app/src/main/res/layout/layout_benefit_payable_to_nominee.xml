<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            app:cardCornerRadius="8dp"
            android:elevation="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardPreventCornerOverlap="false"
            >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/txtHdr"
                style="@style/TextViewStyle.Small"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="@string/UltraLakshyaBenefitPayable"
                android:textColor="@color/white"
                android:textStyle="bold" />



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dashboard_bg"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/tbParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_blue_shape"
                                android:gravity="center"

                                android:text="Benefit to Nominee"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_blue_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Jeevan\nLakshya"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_blue_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="Ultra\nLakshya"
                                android:textColor="@color/white"></TextView>


                        </TableRow>


                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="2dp"
                                android:text="Immediately upon death"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanImmediately"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="---"></TextView>


                            <TextView
                                android:id="@+id/txtUltraImmediately"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text=""></TextView>

                        </TableRow>




                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                android:id="@+id/lblAnnualPayout"
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="2dp"
                                android:text="Annual payout for years"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanAnnualPayoutfor9"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="100000"></TextView>


                            <TextView
                                android:id="@+id/txtUltraAnnualPayoutfor9"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="100000"></TextView>

                        </TableRow>

                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                android:id="@+id/lblMonthlyPayout"
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="2dp"
                                android:text="Monthly payout for years"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanMonthlyPayoutfor9"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="---"></TextView>


                            <TextView
                                android:id="@+id/txtUltraMonthlyPayoutforFirst"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="50000"></TextView>

                        </TableRow>

                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:text="On Maturity date*"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanMaturityDate"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text=""></TextView>


                            <TextView
                                android:id="@+id/txtUltraMaturityDate"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text=""></TextView>

                        </TableRow>

                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                android:id="@+id/lblMonthlyPayoutAfterMaturity"
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="2dp"
                                android:text="Monthly payout for 5 years after maturity"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanMonthlyPayoutfor5"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="---"></TextView>


                            <TextView
                                android:id="@+id/txtUltraMonthlyPayoutfor5"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:text="50000"></TextView>

                        </TableRow>

                        <TableRow
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp">


                            <TextView
                                style="@style/TextViewStyle.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:background="@drawable/cell_shape"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="2dp"
                                android:textStyle="bold"
                                android:text="Total value of benefits"
                                android:textColor="@color/header_dark_text"></TextView>

                            <TextView
                                android:id="@+id/txtJeevanTotal"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textStyle="bold"
                                android:text=""></TextView>


                            <TextView
                                android:id="@+id/txtUltraTotal"
                                style="@style/TextViewStyle.Medium"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"
                                android:background="@drawable/cell_shape"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:textStyle="bold"
                                android:text=""></TextView>

                        </TableRow>



                    </TableLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.VerySmall"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="@string/UltraLakshyaBenefitPayable_Terms"/>


                </LinearLayout>


            </ScrollView>

        </LinearLayout>

        </android.support.v7.widget.CardView>





</RelativeLayout>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:elevation="10dp"
        android:src="@drawable/ic_close"
        android:scaleType="centerInside" />





</RelativeLayout>
