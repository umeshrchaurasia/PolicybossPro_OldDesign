<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dashboard"
    android:orientation="vertical"
    tools:context=".ultralaksha.ultralakshya.fragment.quote.content.UltraLakshayDeathBenefitToNominee">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        style="@style/TextViewStyle.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="5dp"
        android:text="@string/UltraLakshyaDeath"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tbParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/lightblue_border"
        android:weightSum="100">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextViewStyle.VerySmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/cell_blue_shape"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Year Of Death"
                android:textColor="@color/white"></TextView>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:weightSum="100">

                <TableRow>

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="LIC JEEVAN LAKSHYA"
                        android:textColor="@color/white"></TextView>
                </TableRow>


                <TableRow>

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="Total Premium Paid"
                        android:textColor="@color/white">

                    </TextView>

                    <TextView

                        style="@style/TextViewStyle.VerySmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="51"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="Total Benefits Payable"
                        android:textColor="@color/white">

                    </TextView>

                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:weightSum="100">

                <TableRow>

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="ULTRA LAKSHYA"
                        android:textColor="@color/white"></TextView>
                </TableRow>


                <TableRow>

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="Total Premium Paid"
                        android:textColor="@color/white">

                    </TextView>

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="51"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:text="Total Benefits Payable"
                        android:textColor="@color/white">

                    </TextView>

                </TableRow>


            </TableLayout>


        </TableRow>


    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDeathBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
