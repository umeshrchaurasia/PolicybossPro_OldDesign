<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="WHAT Is PolicyBoss Pro?"
        android:textAllCaps="true"
        android:textAppearance="@style/TextStyle.Title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerInside"
        android:src="@drawable/slide_2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:text="Policyboss Pro is a single platform from where you can solicit IRDAI Approved insurance products like Motor, Health, Travel &amp; more"
        android:textAppearance="@style/TextStyle.TextMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/sell_everything_digitally"
        android:textAppearance="@style/TextStyle.TextMedium" />

</LinearLayout>
