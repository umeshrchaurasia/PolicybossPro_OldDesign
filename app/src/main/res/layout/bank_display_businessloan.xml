<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:id="@+id/lyParent"
    >
    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="0dp"

        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="22"

                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivBankLogo"

                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="42dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"

                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:weightSum="100"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"

                            android:text="Best ROI"
                            android:textColor="@color/text_edit_color"></TextView>

                        <TextView
                            android:id="@+id/tvdet_ROI"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold"
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"

                            android:text="EMI"
                            android:textColor="@color/text_edit_color"></TextView>

                        <TextView
                            android:id="@+id/tvdet_Emi"
                            style="@style/TextViewStyle.VerySmall"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"

                    android:background="@color/divider" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"

                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"

                            android:text="Processing FEE"
                            android:textColor="@color/text_edit_color">

                        </TextView>

                        <TextView

                            android:id="@+id/tvdet_ProcessingFee"
                            style="@style/TextViewStyle.VerySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/black"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/llbtnreadterms"

                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivArrow"
                                android:src="@drawable/downarrowread"

                                android:scaleType="fitCenter"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"


                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llbtnApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"

                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/ivbtnApply"
                            android:src="@drawable/applynowloan"

                            android:scaleType="fitCenter"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/btnApply"
                            android:textSize="7sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center_horizontal|center_vertical"

                            android:text="APPLY NOW"
                            android:textColor="@android:color/holo_blue_bright" />                            </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="4dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rvhlknowmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tvxsegment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Segment: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvsegment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:text=""
                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="BEST ROI: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvroi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Per Lac EMI: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPer_Lac_EMI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Loan Amount: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvLoanAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Tenure: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTenure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Age: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Min.Salary: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvminSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Min. Work Experence: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvWorkExperence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Processing Fees: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvProcessingFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">


                    <TextView
                        android:id="@+id/tvCibilscore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Minimum Cibil score: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCibilscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">


                    <TextView
                        android:id="@+id/tvForeclosure1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Foreclosure charges: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvForeclosure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">


                    <TextView
                        android:id="@+id/tvPrepayment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"
                        android:text="Prepayment: "
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvPrepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"

                        android:textAppearance="@style/TextViewStyle.Medium"

                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGrey"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:gravity="center"
                    android:paddingTop="3dp">


                    <TextView
                        android:id="@+id/tvtnc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingLeft="10dp"

                        android:text="T&amp;C Apply"
                        android:textAppearance="@style/TextViewStyle.Medium"
                        android:textColor="@color/blue" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llbacklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"

                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/ivcloseArrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/down_arrow" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>