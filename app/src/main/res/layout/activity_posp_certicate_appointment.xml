<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.policyboss.magicfinmart.certificate.POSP_certicate_appointment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/TextStyle.Toolbar"
            app:titleTextColor="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

   <LinearLayout
       android:id="@+id/ltemail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

       android:padding="30dp"
     >

       <Button
           android:id="@+id/btnsendemail"
           style="@style/ButtonStyle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:padding="10dp"

           android:text="Send Via Email" />
   </LinearLayout>
    <LinearLayout
        android:id="@+id/ltemaidl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="30dp"
        >
    <Button
           android:id="@+id/btnview"
           style="@style/ButtonStyle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:padding="10dp"
           android:text="View and Download"
          />
   </LinearLayout>
</LinearLayout>
